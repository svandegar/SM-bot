{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
		"brief": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "brief",
            "stream": "ext://sys.stdout"
        },

        "info_file_handler": {
            "class": "instagram.loggers.LocalFileHandler",
            "level": "INFO",
            "formatter": "standard",
            "filename": "info.log",
            "when": "d",
            "encoding": "utf8",
			"utc" : true
        },

        "error_file_handler": {
            "class": "instagram.loggers.LocalFileHandler",
            "level": "ERROR",
            "formatter": "standard",
            "filename": "errors.log",
            "when": "d",
            "encoding": "utf8",
			"utc" : true
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["console", "info_file_handler", "error_file_handler"]
    }
}
